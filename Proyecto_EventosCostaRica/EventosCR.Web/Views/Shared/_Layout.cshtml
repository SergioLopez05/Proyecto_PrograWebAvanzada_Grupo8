@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Eventos Costa Rica</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Eventos")">Eventos Costa Rica</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Eventos")">Inicio</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Usuarios")">Usuarios</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Eventos")">Eventos</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Boletos")">Boletos</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("MisBoletos", "Boletos")">Mis Boletos</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Eventos")">Eventos</a></li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">Hola, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link" style="display:inline; padding:0;">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Login</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")">Registrarse</a></li>
                        }
                    </ul>



                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light text-center">
        <div class="container">
            <span class="text-muted">© 2025 Eventos Costa Rica</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
