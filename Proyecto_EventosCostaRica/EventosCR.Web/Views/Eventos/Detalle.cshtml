@model EventosCR.Web.Models.EventoViewModel

<h2>@Model.Nombre</h2>
<img src="@Model.Banner" style="width:300px;" />
<p>@Model.Descripcion</p>
<p>Lugar: @Model.Lugar</p>
<p>Fecha: @Model.FechaEvento.ToString("dd/MM/yyyy HH:mm")</p>
<p>Precio: ₡@Model.PrecioEntrada</p>

@if (ViewBag.EstaAgotado)
{
    <p class="text-danger">Evento agotado</p>
}
else
{
    <a href="@Url.Action("Comprar", "Boletos", new { eventoId = Model.Id })" class="btn btn-primary">Comprar Asiento</a>
}
